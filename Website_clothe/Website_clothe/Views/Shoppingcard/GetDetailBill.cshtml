@model IEnumerable<Website_clothe.Models.detailshoppingbill>
@{ 
    var nguoidung = ViewBag.Nguoidung;
    var donmua = ViewBag.Donmua;
    var trangthai = ViewBag.Trangthai;
    var billbuy = ViewBag.bill;
}
@if (Model != null && Model.Any())
{
    <div class="container-fluid">
        <div class="m-2 row">
          <div class="col-12">
              <div class="card my-2">
                  <div class="card-header">
                      <div class="row justify-content-between align-items-center">
                          <div class="col-8">
                              <p class="fs-2 m-0 d-block w-50">Chi tiết đơn hàng</p>
                          </div>
                          <div class="col-3 d-flex justify-content-end">
                              <a href="#" class="btn btn-success resetbill">Quay lại</a>
                          </div>
                      </div>
                      
                      
                  </div>
                  <div class="card-body">
                      <div class="row">
                          <div class="col-3">
                              Tên người đặt hàng:
                          </div>
                          <div class="col-8">
                              @donmua.Tennguoidung
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-3">
                              Địa chỉ:
                          </div>
                          <div class="col-8">
                              @donmua.DiaChi
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-3">
                              Số điện thoại:
                          </div>
                          <div class="col-8">
                              @nguoidung.SoDT
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-3">
                              Email:
                          </div>
                          <div class="col-8">
                              @nguoidung.Email
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col-12">
              <div class="card">
                  <div class="card-body">
                      <div class="row">
                          <table class="table text-center">
                              <thead>
                                  <tr>
                                      <th>Mã sản phẩm</th>
                                      <th>Tên sản phẩm</th>
                                      <th>Size</th>
                                      <th>Màu</th>
                                      <th>Số lượng</th>
                                      <th>Đơn giá</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  @foreach (var item in Model)
                                  {
                                      <tr>
                                          <td>@item.masanpham</td>
                                          <td>@item.tensanpham</td>
                                          <td>@item.size</td>
                                          <td class="d-flex justify-content-center">
                                              <div style="border:2px solid rgb(52, 42, 42);border-radius:20px; width:30px;height:30px;background-color:@item.mausac;"></div>
                                          </td>
                                          <td>@item.soluong</td>
                                          <td>@item.dongia đ</td>
                                      </tr>
                                  }
                                  <tr>
                                      <th colspan="5">
                                          Tổng đơn
                                      </th>
                                      <th>
                                          @donmua.Tongdonhang đ
                                      </th>
                                  </tr>
                              </tbody>
                          </table>
                      </div>
                      <div class="row justify-content-between">
                          <div class="col-5">
                              <p style="text-align:right">Trạng thái đơn hàng:</p>
                          </div>
                          <div class="col-2" style="text-align:right">
                              <p >@trangthai.TenTrangThai</p>
                          </div>
                      </div>
                    <div class="row justify-content-center" style="margin-top:40px; margin-bottom:20px;">
                        <button type="button" class="btn btn-danger w-25 cancel_bill" id="@donmua.ID_Donhang-@trangthai.ID_TrangThai">Xóa đơn đặt hàng</button>
                    </div>
                  </div>
              </div>
          </div>
        </div>
    </div>
 }

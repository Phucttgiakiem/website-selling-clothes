@model Website_clothe.Models.Forgetpassword
<style>
    .btnforgotpass:hover{
        background-color:rgb(44, 216, 255)
    }
    .btnforgotpass:active {
        background-color: rgb(239, 255, 98)
    }

    .btnforgotpass {
        width: 130px;
        height: 45px;
        background-color: rgb(33, 130, 210);
        color: white;
        cursor: pointer;
        font-family: Arial;
        font-weight: bold;
        font-size: 20px;
        border: none;
        outline: none
    }
</style>
<div class="container-fluid d-flex justify-content-center" style="margin-top:160px;margin-bottom:160px">
    <div class="d-flex flex-column justify-content-center align-items-center" style="width:700px;">
        <div class="d-flex flex-column justify-content-start w-100">
            <h2>Lấy lại mật khẩu</h2>
            <hr class="w-100" />
        </div>

        @using (Html.BeginForm("ForgetPass", "Access", FormMethod.Post, new
        {
            @class = "row w-100 "
        }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group my-3">
                <div class="col-12">
                    @Html.TextBoxFor(m => m.username, new { @class = "w-100  form-control", placeholder = "Tên đăng nhập" })
                    @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })
                    <span></span>
                </div>
            </div>
            <div class="form-group my-3">
                <div class="col-12">
                    @Html.PasswordFor(m => m.password, new { @class = "w-100  form-control", placeholder = "Mật khẩu" })
                    @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group my-3">
                <div class="col-12">
                    @Html.PasswordFor(m => m.comfirmpassword, new { @class = "w-100  form-control", placeholder = "Nhập lại mật khẩu" })
                    @Html.ValidationMessageFor(m => m.comfirmpassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group mt-4">
                <div class="col-12">
                    <input type="submit" value="Gửi" class="btnforgotpass"/>
                </div>
            </div>
        }

    </div>
</div>

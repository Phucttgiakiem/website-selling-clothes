@model Website_clothe.Models.Nhacungcap
@{
    ViewBag.Title = "Chi tiết nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid mt-4 px-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h4>Chi tiết nhà cung cấp</h4>
            <button class="btn btn-info " onclick="location.href='@Url.Action("Index", "businessprovide")'">
                <div class="text-white">Quay lại</div>
            </button>
        </div>
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label class="form-label">Tên nhà cung cấp</label>
                    <input type="text" class="form-control" value="@Model.Tennhacungcap" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Địa chỉ</label>
                    <input type="text" class="form-control" value="@Model.Diachi" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Số điện thoại</label>
                    <input type="text" class="form-control" value="@Model.SoDT" readonly/>
                </div>
            </form>
        </div>
    </div>
</div>

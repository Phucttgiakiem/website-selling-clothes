<style>
    /* General styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .invoice-container {
        width: 80%;
        margin: 20px auto;
        padding: 20px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .invoice-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .store-info {
        font-weight: bold;
        margin-bottom: 10px;
    }

    .invoice-details {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .invoice-details p {
            margin: 5px 0;
        }

    .supplier-info,
    .delivery-info {
        margin-bottom: 20px;
    }

        .supplier-info p,
        .delivery-info p {
            margin: 5px 0;
        }

    .product-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .product-table th,
        .product-table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .product-table th {
            background-color: #f2f2f2;
        }

    .additional-info {
        margin-top: 30px;
    }

        .additional-info p {
            margin-bottom: 5px;
        }

    .signatures {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

        .signatures div {
            text-align: center;
        }
</style>

<div class="invoice-container">
    <div class="invoice-header">
        <h4>PHIẾU NHẬP HÀNG</h4>
    </div>

    <div class="store-info">
        <p>CỬA HÀNG FASHION</p>
        <p>Số 6, Phường 9, Quận 10, Tp. Hồ Chí Minh </p>
    </div>

    <div class="invoice-details">
        <div class="supplier-info">
            <p>Nhà cung cấp: @Model.tennhacungcap</p>
            <p>Số điện thoại: @Model.sodt</p>
        </div>
        <div class="invoice-number">
            <p>Số phiếu: @Model.ID_phieunhap</p>
            <p>Ngày: @Model.ngaynhap</p>
        </div>
    </div>

    <table class="product-table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã sản phẩm</th>
                <th>Tên hàng</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ctbill)
            {
                int thanhtien = item.quality * item.prices;
                int i = 1;
                <tr>
                    <td>@i</td>
                    <td>@item.idsp</td>
                    <td>@item.namepd - @item.sizes - @item.color</td>
                    <td>@item.quality</td>
                    <td>@String.Format("{0:#,##0}", item.prices)</td>
                    <td>@String.Format("{0:#,##0}", thanhtien)</td>
                </tr>
                i++;
            }
        </tbody>
    </table>

    <div class="additional-info">
        <p>Ghi chú: @Model.ghichu</p>
        <p>Tổng đơn: @String.Format("{0:#,##0}", Model.tongtiennhap) đồng</p>
    </div>

    <div class="signatures">
        <div>
            <p>Người đặt hàng</p>
            <p>(Ký tên)</p>
        </div>
        <div>
            <p>Người giao hàng</p>
            <p>(Ký tên)</p>
        </div>
    </div>
</div>


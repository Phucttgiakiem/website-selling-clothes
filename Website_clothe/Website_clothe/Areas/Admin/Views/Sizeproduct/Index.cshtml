@model List<Website_clothe.Models.Size>

@{
    ViewBag.Title = "Quản lý size sản phẩm";
    var query = ViewBag.loai;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid mt-4 px-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h3>Danh sách size sản phẩm</h3>
            <button class="btn btn-primary " onclick="location.href= ' @Url.Action("Create", "Sizeproduct") ' ">
                <div class="text-white">Thêm mới</div>
            </button>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã size</th>
                        <th>Tên size</th>
                        <th>Loại sản phẩm</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID_Size</td>
                            <td>@item.TenSize</td>
                            @if (item.ID_Loai != null)
                            {
                                foreach (var item2 in query)
                                {
                                    if (item2.ID_Loai == item.ID_Loai)
                                    {
                                        <td>@item2.Tenloai</td>
                                        break;
                                    }
                                }
                            }
                            else
                            {
                                <td>Không có thông tin</td>
                            }
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.ID_Size }, new { @class = "btn btn-warning" })

                                <a class="btn btn-danger" href="@Url.Action("Delete", "Sizeproduct", new { id = item.ID_Size })">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@model Website_clothe.Models.Bienthesanpham
@{ 
    var sanpham = ViewBag.Sanpham;
    var size = ViewBag.Size;
    var mau = ViewBag.Mau;
}
<div class="container-fluid mt-4 px-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h4>Chi tiết sản phẩm biến thể</h4>
            <button class="btn btn-info " onclick="location.href='@Url.Action("Index", "Variantproduct")'">
                <div class="text-white">Quay lại</div>
            </button>
        </div>
        <div class="card-body">
            <div class="mx-2 my-2 row">
                <div class="col-3"><span class="fs-5" style="font-family:Arial">Mã sản phẩm biến thể:</span></div>
                <div class="col-9"><span style="font-family:Arial">@Model.ID_Bienthesanpham</span></div>
            </div>
            <div class="mx-2 my-2 row">
                <div class="col-3"><span class="fs-5" style="font-family:Arial">Tên sản phẩm biến thể:</span></div>
                <div class="col-9"><span style="font-family:Arial">@sanpham.Tensanpham</span></div>
            </div>
            <div class="mx-2 my-2 row">
                <div class="col-3"><span class="fs-5" style="font-family:Arial">Size:</span></div>
                <div class="col-9"><span style="font-family:Arial">@size.TenSize</span></div>
            </div>
            <div class="mx-2 my-2 row">
                <div class="col-3"><span class="fs-5" style="font-family:Arial">Màu sắc:</span></div>
                <div class="col-9"><div style="width:100px;height:40px;border: 1px solid rgb(10, 9, 9); border-radius:20px; background-color:@mau.Tenmau">
                     </div></div>
            </div>
            <div class="mx-2 my-2 row">
                <div class="col-3"><span class="fs-5" style="font-family:Arial">Số lượng tồn:</span></div>
                <div class="col-9"><span style="font-family:Arial">@Model.Soluongton cái</span></div>
            </div>
        </div>
    </div>
</div>
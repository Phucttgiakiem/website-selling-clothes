@model List<Website_clothe.Models.MauSac>

@{
    var query = ViewBag.Loai;
    ViewBag.Title = "Quản lý Màu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid mt-4 px-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h3>Danh sách Màu</h3>
            <button class="btn btn-primary " onclick="location.href= ' @Url.Action("Create", "Colorproduct") ' ">
                <div class="text-white">Thêm màu</div>
            </button>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã màu</th>
                        <th>Màu</th>
                        <th>Loại sản phẩm</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID_Mau</td>
                            <td><div style="width:110px;height:50px;border-radius:30px;border:3px solid rgb(6, 6, 6);padding:3px;">
                                    <div style="width:100px;height:40px; border-radius:20px;background-color:@item.Tenmau;"></div>
                                </div>
                            </td>
                            @if (item.ID_Loai != null)
                            {
                                foreach (var item2 in query)
                                {
                                    if (item2.ID_Loai == item.ID_Loai)
                                    {
                                        <td>@item2.Tenloai</td>
                                        break;
                                    }
                                }
                            }
                            else
                            {
                                <td>không có thông tin</td>
                            }
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.ID_Mau }, new { @class = "btn btn-warning" })

                                <a class="btn btn-danger" href="@Url.Action("Delete", "Colorproduct", new { id = item.ID_Mau })">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



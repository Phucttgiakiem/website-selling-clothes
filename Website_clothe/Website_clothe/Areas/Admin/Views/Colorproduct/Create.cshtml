@{
    var query = ViewBag.Loai;
    ViewBag.Title = "Add-color-product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid mt-4 px-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h4>Thêm màu mới</h4>
            <button class="btn btn-info " onclick="location.href='@Url.Action("Index", "Colorproduct")'">
                <div class="text-white">Quay lại</div>
            </button>
        </div>
        <div class="card-body">
            <form asp-controller="Colorproduct" asp-action="Create" method="post">
                <p style="color:red">
                    @ViewBag.error
                </p>
                <div class="mb-3">
                    <label class="form-label">Mã màu</label>
                  @*  <input type="text" class="form-control" placeholder="Nhập tên màu" value="" name="tenmau" required />*@
                    <input type="color" class="form-control form-control-color" value="" name="tenmau"/>
                </div>
                <div class="mb-3">
                    <label class="form-label">Tên loại sản phẩm</label>
                    <select name="loaisp" class="form-select" required>
                        <option value="">Chọn loại sản phẩm</option>
                        @foreach (var item in query)
                        {
                            <option value="@item.ID_Loai">@item.Tenloai</option>
                        }
                    </select>
                </div>
                <input type="submit" class="btn btn-success" value="Submit" />
            </form>
        </div>
    </div>
</div>

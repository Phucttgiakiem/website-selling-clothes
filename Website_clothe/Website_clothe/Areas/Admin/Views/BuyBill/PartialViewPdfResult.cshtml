    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    /* General styles for the entire invoice container */
    .invoice-container {
        width: 100%;
        max-width: 800px; /* Adjust this width according to your preference */
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Header Section */
    .header-section {
        text-align: center;
        margin-bottom: 20px;
    }

    .store-info {
        font-weight: bold;
        margin-bottom: 10px;
    }

    .invoice-details {
        display: flex;
        justify-content: space-between;
    }

        .invoice-details p {
            margin: 5px 0;
        }

    .invoice-num,
    .invoice-date {
        text-align: left;
    }

    /* Customer & Delivery Info */
    .customer-info {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .customer-details,
    .delivery-info {
        margin-bottom: 10px;
        width: 48%;
    }

        .delivery-info p {
            margin: 5px 0;
        }

    /* Table - Product List */
    .product-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .product-table th,
        .product-table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .product-table th {
            background-color: #f2f2f2;
        }

    /* Total Amount */
    .total-amount {
        text-align: right;
        margin-bottom: 20px;
    }

    /* Signatures */
    .signatures {
        display: flex;
        justify-content: space-between;
    }
</style>


<div class="invoice-container">
    <!-- Header Section -->
    <div class="header-section">
        <!-- Store Info -->
        <div class="store-info">
            <!-- Store Address -->
            <p>CỬA HÀNG FASHION</p>
            <p>Số 6, Phường 9, Quận 10, Tp. Hồ Chí Minh</p>
        </div>
        <!-- Invoice Details -->
        <div class="invoice-details">
            <div class="invoice-num">
                <p>Số phiếu mua:</p>
                <p>@Model.madonhang</p>
            </div>
            <div class="invoice-date">
                <p>Ngày đặt:</p>
                <p>@Model.ngaydat</p>
            </div>
        </div>
        <h4>PHIẾU MUA HÀNG</h4>
    </div>

    <!-- Customer & Delivery Info -->
    <div class="customer-info">
        <div class="customer-details">
            <p>Người lập phiếu: Admin</p>
            <p>Người nhận: @Model.Tennguoidung</p>
            <p>Số điện thoại người nhận: @Model.sodt</p>
        </div>
        <div class="delivery-info">
            <p>Địa chỉ giao hàng:</p>
            <p>@Model.Diachi</p>
        </div>
    </div>

    <!-- Table - Product List -->
    <table class="product-table">
        <!-- Table Header -->
        <thead>
            <!-- Table Headers: STT, Mã sản phẩm, Tên hàng, Số lượng, Đơn giá, Thành tiền -->
            <tr class="">
                <th>STT</th>
                <th>Mã sản phẩm</th>
                <th>Tên hàng</th>
                <th>
                    Số lượng
                </th>
                <th>
                    Đơn giá
                </th>
                <th>
                    Thành tiền
                </th>
            </tr>
        </thead>
        <!-- Table Body: Loop through items -->
        <tbody>
            <!-- Rows with product details -->
            @foreach (var item in Model.ctdh)
            {
                int thanhtien = item.Soluongmua * item.Gia;
                int i = 1;
                <tr>
                    <td>@i</td>
                    <td>@item.mabienthe</td>
                    <td>@item.Tensanpham - @item.Size - @item.Mau</td>
                    <td>@item.Soluongmua</td>
                    <td>@String.Format("{0:#,##0}", item.Gia)</td>
                    <td>
                        @String.Format("{0:#,##0}", thanhtien)
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>

    <!-- Total Amount -->
    <div class="total-amount">
        <p>Tổng đơn hàng mua:</p>
        <p>@String.Format("{0:#,##0}", Model.Tongdon) đồng</p>
    </div>

    <!-- Signatures -->
    <div class="signatures">
        <!-- Người mua hàng, Người lập phiếu -->
        <div style="display:flex;flex-direction:column;align-items:center">
            <p style="margin:0">Người mua hàng</p>
            <p style="margin:0">(ký tên)</p>
        </div>
        <div style="display:flex;flex-direction:column;align-items:center">
            <p style="margin:0">Người lập phiếu</p>
            <p style="margin:0">(Ký tên)</p>
        </div>
    </div>
</div>

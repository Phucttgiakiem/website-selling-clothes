<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Client/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css"
          rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
   @* <script src="~/Scripts/jquery-3.4.1.js"></script>*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    @*<script src="~/Scripts/jquery-3.4.1.min.js"></script>*@
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>



</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <!-- Brand và Toggle Button -->
                <div class="col-md-8 col-lg-8 col-xl-10">
                    <a class="navbar-brand" href="index.html">FASHION WEBSITE ADMIN</a>
                </div>
                <div class="col-md-4 col-lg-4 col-xl-2 text-end">
                    <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>

            <!-- Dropdown User và Menu -->
            <div class="d-flex justify-content-end align-items-center">
                <ul class="navbar-nav">
                    <!-- Dropdown User -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user fa-fw"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <!-- Username -->
                            <li>
                                <a class="dropdown-item" href="#!">
                                    @if (Session["AdminUsername"] != null)
                                    {
                                        @HttpContext.Current.Session["AdminUsername"]
                                    }
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <!-- Logout -->
                            <li><a class="dropdown-item" href="/Admin/AdminUser/Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-screwdriver"></i></div>
                            Quản lý danh mục
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="/Admin/Category/Index">Danh mục chung</a>
                                <a class="nav-link" href="/Admin/DetailCatagory/Index">Chi tiết danh mục</a>
                            </nav>
                        </div>



                        <a class="nav-link" href="/Admin/Brandproduct/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-screwdriver"></i></div>
                            Quản lý Thương hiệu
                        </a>
                        <a class="nav-link" href="/Admin/Typeproduct/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-screwdriver"></i></div>
                            Quản lý Thể loại
                        </a>
                        <a class="nav-link" href="/Admin/Colorproduct/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-stamp"></i></div>
                            Quản lý Màu
                        </a>
                        <a class="nav-link" href="/Admin/Sizeproduct/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-stamp"></i></div>
                            Quản lý Size
                        </a>
                        <a class="nav-link" href="/Admin/businessprovide/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-truck-moving"></i></div>
                            Quản lý Nhà cung cấp
                        </a>
                        <a class="nav-link" href="/Admin/Product/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-bag"></i></div>
                            Quản lý Sản phẩm
                        </a>

                        <a class="nav-link" href="/Admin/Variantproduct/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-bag"></i></div>
                            Quản lý Sản phẩm biến thể
                        </a>
                        <a class="nav-link" href="/Admin/BuyBill/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-money-bill"></i></div>
                            Quản lý đơn hàng đặt
                        </a>
                        <a class="nav-link" href="/Admin/Importproduct/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-truck-loading"></i></div>
                            Quản lý nhập hàng
                        </a>
                        <a class="nav-link" href="/Admin/Manageruser/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Quản lý người dùng
                        </a>
                        <a class="nav-link" href="/Admin/Condition/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-thermometer-half"></i></div>
                            Quản lý trạng thái
                        </a>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayoutsStatistical" aria-expanded="false" aria-controls="collapseLayoutsStatistical">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-pie"></i></div>
                            Quản lý thống kê
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayoutsStatistical" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="/Admin/Statistical/ShowStatsticalwithrevenue">Thống kê doanh thu</a>
                                <a class="nav-link" href="/Admin/Statistical/ShowStatsticalwithproduct">Thống kê sản phẩm</a>
                            </nav>
                        </div>
                    </div>
                </div>

            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>

                @RenderBody()
            </main>

        </div>
    </div>
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>*@
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Client/js/scripts.js"></script>


    <script src="~/Content/ckfinder/ckfinder.js"></script>


</body>
</html>



